<% content_for(:title, "Product | Mario's Wines") %>

<h1><%= @product.name %></h1>


<% if @product.reviews.any? %>
  <h4>Here are the reviews for this product:</h4>

  <ul>
    <% @product.reviews.each do |review| %>
      <li>
        <%= review.author %><br>
        <%= review.content_body %><br>
        <%= review.rating %><br>
        |
        <%= link_to "Edit review", edit_product_review_path(@product, review) %> |
        <%= link_to "Delete", product_review_path(@product, review),
                                 :data => {:confirm => "Are you sure?",
                                                :method => "delete"} %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>There are no reviews yet!</p>
<% end %>

<p><%= link_to "Add a review", new_product_review_path(@product) %></p>
<p><%= link_to "Edit Wines", edit_product_path(@product) %></p>
<p><%= link_to "Delete Wine", product_path(@product),
                        :data => {:confirm => "Are you sure?",
                                       :method => "delete"} %></p>

<p><%= link_to "Return to List of Wines", products_path %></p>
